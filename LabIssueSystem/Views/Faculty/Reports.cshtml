@{
    Layout = "~/Views/Shared/_FacultyLayout.cshtml";
    ViewData["Title"] = "Reports";
}

<div class="reports">
    <div class="row g-4 mb-4">
        <div class="col-md-4">
            <div class="card">
                <div class="card-header">
                    <h6 class="mb-0"><i class="fas fa-building me-2"></i>Tickets by Lab</h6>
                </div>
                <div class="card-body">
                    @if (ViewBag.TicketsByLab != null && ViewBag.TicketsByLab.Count > 0)
                    {
                        <ul class="list-group list-group-flush">
                            @foreach (var lab in ViewBag.TicketsByLab)
                            {
                                <li class="list-group-item d-flex justify-content-between align-items-center">
                                    @lab.LabName
                                    <span class="badge bg-primary rounded-pill">@lab.Count</span>
                                </li>
                            }
                        </ul>
                    }
                    else
                    {
                        <p class="text-muted text-center">No data available</p>
                    }
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card">
                <div class="card-header">
                    <h6 class="mb-0"><i class="fas fa-signal me-2"></i>Tickets by Status</h6>
                </div>
                <div class="card-body">
                    @if (ViewBag.TicketsByStatus != null && ViewBag.TicketsByStatus.Count > 0)
                    {
                        <ul class="list-group list-group-flush">
                            @foreach (var status in ViewBag.TicketsByStatus)
                            {
                                <li class="list-group-item d-flex justify-content-between align-items-center">
                                    <span class="badge status-@status.Status.ToLower().Replace(" ", "-")">@status.Status</span>
                                    <span class="badge bg-secondary rounded-pill">@status.Count</span>
                                </li>
                            }
                        </ul>
                    }
                    else
                    {
                        <p class="text-muted text-center">No data available</p>
                    }
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card">
                <div class="card-header">
                    <h6 class="mb-0"><i class="fas fa-exclamation-triangle me-2"></i>Tickets by Priority</h6>
                </div>
                <div class="card-body">
                    @if (ViewBag.TicketsByPriority != null && ViewBag.TicketsByPriority.Count > 0)
                    {
                        <ul class="list-group list-group-flush">
                            @foreach (var priority in ViewBag.TicketsByPriority)
                            {
                                <li class="list-group-item d-flex justify-content-between align-items-center">
                                    <span class="badge priority-@priority.Priority.ToLower()">@priority.Priority</span>
                                    <span class="badge bg-secondary rounded-pill">@priority.Count</span>
                                </li>
                            }
                        </ul>
                    }
                    else
                    {
                        <p class="text-muted text-center">No data available</p>
                    }
                </div>
            </div>
        </div>
    </div>

    <div class="row g-4">
        <div class="col-12">
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h5 class="mb-0"><i class="fas fa-clock me-2"></i>Resolution Time Analysis</h5>
                    <div>
                        <span class="me-3">Average: <strong>@ViewBag.AverageResolutionTime hours</strong></span>
                    </div>
                </div>
                <div class="card-body">
                    @if (ViewBag.ResolutionTimeAnalysis != null && ViewBag.ResolutionTimeAnalysis.Count > 0)
                    {
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead>
                                    <tr>
                                        <th>Ticket ID</th>
                                        <th>Issue</th>
                                        <th>Lab</th>
                                        <th>Reported Date</th>
                                        <th>Resolved Date</th>
                                        <th>Resolution Time</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var ticket in ViewBag.ResolutionTimeAnalysis)
                                    {
                                        <tr>
                                            <td><strong>#@ticket.TicketId</strong></td>
                                            <td>@ticket.IssueTitle</td>
                                            <td>@ticket.LabName</td>
                                            <td>@ticket.ReportedDate.ToString("MMM dd, yyyy HH:mm")</td>
                                            <td>@ticket.ResolvedDate?.ToString("MMM dd, yyyy HH:mm")</td>
                                            <td>
                                                @if (ticket.ResolutionTimeHours > 24)
                                                {
                                                    <span class="badge bg-danger">@ticket.ResolutionTimeHours hrs</span>
                                                }
                                                else if (ticket.ResolutionTimeHours > 12)
                                                {
                                                    <span class="badge bg-warning">@ticket.ResolutionTimeHours hrs</span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-success">@ticket.ResolutionTimeHours hrs</span>
                                                }
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-5">
                            <i class="fas fa-clock fa-4x text-muted mb-4"></i>
                            <p class="text-muted">No resolved tickets to analyze</p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
