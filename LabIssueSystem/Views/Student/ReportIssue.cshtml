@model LabIssueSystem.Models.ViewModels.ReportIssueViewModel
@{
    Layout = "~/Views/Shared/_StudentLayout.cshtml";
    ViewData["Title"] = "Report Issue";
}

<div class="report-issue">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card">
                <div class="card-header">
                    <h5><i class="fas fa-plus-circle me-2"></i>Report a New Issue</h5>
                </div>
                <div class="card-body">
                    @if (TempData["SuccessMessage"] != null)
                    {
                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                            <i class="fas fa-check-circle me-2"></i>
                            @TempData["SuccessMessage"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    }

                    <form asp-action="ReportIssue" method="post">
                        @Html.AntiForgeryToken()
                        
                        <div class="row g-3">
                            <div class="col-md-6">
                                <label asp-for="IPAddress" class="form-label">IP Address <span class="text-danger">*</span></label>
                                <div class="input-group">
                                    <input asp-for="IPAddress" class="form-control" placeholder="192.168.1.x" required />
                                    <button type="button" class="btn btn-outline-secondary" onclick="detectIP()" title="Auto-detect IP">
                                        <i class="fas fa-crosshairs"></i>
                                    </button>
                                </div>
                                <span asp-validation-for="IPAddress" class="text-danger"></span>
                                <small class="text-muted">Auto-detected from your connection</small>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="LabName" class="form-label">Lab Name <span class="text-danger">*</span></label>
                                <select asp-for="LabName" class="form-select" required>
                                    <option value="">Select Lab</option>
                                    <option value="Lab A">Lab A</option>
                                    <option value="Lab B">Lab B</option>
                                    <option value="Lab C">Lab C</option>
                                    <option value="Lab D">Lab D</option>
                                    <option value="Computer Lab 1">Computer Lab 1</option>
                                    <option value="Computer Lab 2">Computer Lab 2</option>
                                    <option value="Other">Other</option>
                                </select>
                                <span asp-validation-for="LabName" class="text-danger"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="ComputerName" class="form-label">Computer Name/Number</label>
                                <input asp-for="ComputerName" class="form-control" placeholder="e.g., PC-101" />
                            </div>
                            <div class="col-md-6">
                                <label asp-for="Priority" class="form-label">Priority <span class="text-danger">*</span></label>
                                <select asp-for="Priority" class="form-select" required>
                                    <option value="Low">Low - Minor inconvenience</option>
                                    <option value="Medium" selected>Medium - Affects work</option>
                                    <option value="High">High - Cannot complete work</option>
                                </select>
                                <span asp-validation-for="Priority" class="text-danger"></span>
                            </div>
                            <div class="col-12">
                                <label asp-for="IssueTitle" class="form-label">Issue Title <span class="text-danger">*</span></label>
                                <input asp-for="IssueTitle" class="form-control" placeholder="Brief description of the issue" maxlength="200" required />
                                <span asp-validation-for="IssueTitle" class="text-danger"></span>
                            </div>
                            <div class="col-12">
                                <label asp-for="IssueDescription" class="form-label">Issue Description <span class="text-danger">*</span></label>
                                <textarea asp-for="IssueDescription" class="form-control" rows="5" 
                                          placeholder="Please provide detailed information about the issue..." 
                                          maxlength="1000" required></textarea>
                                <span asp-validation-for="IssueDescription" class="text-danger"></span>
                                <small class="text-muted">@Html.DisplayNameFor(m => m.IssueDescription): <span id="descCount">0</span>/1000</small>
                            </div>
                            <div class="col-12">
                                <div class="alert alert-info">
                                    <h6><i class="fas fa-info-circle me-2"></i>Before Submitting:</h6>
                                    <ul class="mb-0">
                                        <li>Ensure you are at the correct computer</li>
                                        <li>Note any error messages displayed</li>
                                        <li>Describe when the issue started</li>
                                        <li>Try to restart the computer if possible</li>
                                    </ul>
                                </div>
                            </div>
                            <div class="col-12">
                                <div class="d-flex gap-3">
                                    <button type="submit" class="btn btn-primary btn-lg">
                                        <i class="fas fa-paper-plane me-2"></i>Submit Issue
                                    </button>
                                    <a asp-action="Dashboard" class="btn btn-outline-secondary btn-lg">
                                        <i class="fas fa-times me-2"></i>Cancel
                                    </a>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
        <div class="col-lg-4">
            <div class="card">
                <div class="card-header">
                    <h6><i class="fas fa-lightbulb me-2"></i>Quick Tips</h6>
                </div>
                <div class="card-body">
                    <ul class="list-unstyled mb-0">
                        <li class="mb-3">
                            <i class="fas fa-check text-success me-2"></i>
                            Use the auto-detect button for IP
                        </li>
                        <li class="mb-3">
                            <i class="fas fa-check text-success me-2"></i>
                            Be specific in the description
                        </li>
                        <li class="mb-3">
                            <i class="fas fa-check text-success me-2"></i>
                            Include error messages if any
                        </li>
                        <li>
                            <i class="fas fa-check text-success me-2"></i>
                            You can track your ticket status
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        function detectIP() {
            fetch('/Account/GetClientIP')
                .then(response => response.json())
                .then(data => {
                    document.getElementById('IPAddress').value = data.ip || 'Unable to detect';
                })
                .catch(error => {
                    console.error('Error detecting IP:', error);
                    document.getElementById('IPAddress').value = '127.0.0.1';
                });
        }

        // Character count for description
        document.getElementById('IssueDescription').addEventListener('input', function() {
            document.getElementById('descCount').textContent = this.value.length;
        });

        // Set initial count
        document.getElementById('descCount').textContent = document.getElementById('IssueDescription').value.length;
    </script>
}
